<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width">
    <title>Greg Nalehach, Web Developer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <header>
    <div class="navbar-fixed">
      <nav class="transparent z-depth-0 black-text">
        <div class="nav-wrapper">
          <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
          <ul class="left hide-on-med-and-down compress">
            <% if current_user && current_user.admin %>
              <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
              <li><%= link_to "Profile", current_user %> </li>
              <li><%= link_to "My projects", projects_path %></li>
            <% end %>
          </ul>
          <ul class="side-nav flow-text" id="mobile-demo">
            <% if current_user && current_user.admin %>
              <li><%= link_to "Profile", current_user %> </li>
              <li><%= link_to "My projects", projects_path %></li>
              <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
  </header>
  <body>
    <%= yield %>
  </body>
  <script>
    $('.button-collapse').sideNav();
  </script>
</html>
